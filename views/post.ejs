<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>게시글 작성</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #f1f1f1;
            padding: 10px;
            text-align: center;
        }
        header img {
            width: 100px;
            height: auto;
        }
        .container {
            margin-top: 50px;
            display: flex;
            justify-content: center;
        }
        .content {
            width: 50%;
            padding: 20px;
        }
        .title {
            width: calc(100% - 360px);
            margin-right: 180px;
            margin-bottom: 20px;
        }
        .title input {
            width: 100%;
            height: 30px;
            border: 1px solid #ccc;
            padding: 5px;
            box-sizing: border-box;
        }
        .content textarea {
            width: 100%;
            height: 200px;
            border: 1px solid #ccc;
            padding: 5px;
            box-sizing: border-box;
            resize: none;
        }
        .button {
            text-align: right;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <header>
        <img src="wise_logo.png" alt="동국대 Wise 로고">
    </header>
    <div class="container">
        <div class="content">
            <div class="title">
                <input type="text" placeholder="제목을 입력하세요" id="title">
            </div>
            <div class="body">
                <textarea placeholder="내용을 입력하세요" id="content"></textarea>
            </div>
            <div class="button" onClick = "writePost()">게시글 작성</div>
            <div class="button" onClick = "writePostTemp()">게시글 임시저장</div>
        </div>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        // 2024.04.15 게시글 작성 기능 구현 완료
        // 2024.04.17 기능 동작 안함. 수정 완료
        async function writePost() {
            const title = document.getElementById('title').value;
            const content = document.getElementById('content').value;

            if (!title){
                return alert("제목을 입력해주세요.");
            }

            if (!content){
                return alert("내용을 입력해주세요.");
            }

            try{
                // 2024.04.15 user_id를 어떻게 보낼지 방안 생각하기
                // 2024.04.17 라우터를 찾지 못하는 오류 수정
                const res = await axios.post(`/posts`, {title, content});
                post = res.data;
                console.log(post);
                alert('게시글을 업로드 했습니다!');
                location.href='/main';
                
            } catch(err) {
                console.error(err);
            }
        }
    </script>

</body>
</html>